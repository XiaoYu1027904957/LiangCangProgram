<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="50dp"
    >

    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:text="商店"
            android:textColor="#ffffff"
            android:drawableTop="@drawable/shapping_selector"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/main_shopping"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="杂志"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:drawableTop="@drawable/mgz_selector"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/main_magazine"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:drawableTop="@drawable/daren_selector"
            android:layout_marginTop="6dp"
            android:text="达人"
            android:textColor="#ffffff"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/main_doyen"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="分享"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:drawableTop="@drawable/good_selector"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/main_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="个人"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:drawableTop="@drawable/personal_selector"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/main_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </RadioGroup>

</LinearLayout>